-- bind function to class 
-- in constructor
this.fucntionName = this.fucntionName.bind(this)

-- reduce function, iterate from first to last element in array and call the action
-- also exist reduceRight which iterates from last to first element in array.
var arr = [1, 2, 3];
var initialVal = 0;
var result = arr.reduce(function(previousVal, currentVal, idx, arr) {
  return previousVal + currentVal;
}, initialVal);

console.log('res is: ' + result) // 6

-- map function, transform one array to other, and call action for each element
var arr = [1, 2, 3];
var result = arr.map(function(el) {
  return el * 2;
});

console.log(result); //[2, 4, 6]

-- filter function, filter elements in array by predicate
var arr = [1, -1, 2, -2, 3];
var positiveArr = arr.filter(function(el, idx) {
  return el > 0;
});

console.log( positiveArr ); // 1,2,3
